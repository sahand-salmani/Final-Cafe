<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Add Fail</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <p class="mb-4">Adding Category to the website</p>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Add" asp-controller="Fails" asp-area="Panel" method="post">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Category Details</legend>


                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Employee</label>
                    <div class="form-check form-check-inline">
                        <div class="col-lg-3">
                            <select class="form-control select-fixed-single" asp-for="EmployeeId" asp-items="@Model.SelectList" data-fouc>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Happened At</label>
                    <div class="col-lg-3">
                        <input type="text" asp-for="HappenedAt" value="@DateTime.Today.ToString("d")" class="form-control pickadate-accessibility" placeholder="Try me&hellip;">
                    </div>
                </div>
                <span asp-validation-for="HappenedAt" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Restaurant</label>
                    <div class="col-lg-6">
                        <input class="form-control" asp-for="@Model.Restaurant">
                    </div>
                </div>
                <span asp-validation-for="@Model.Restaurant" class="text-danger"></span>
                

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Note</label>
                    <div class="col-lg-6">
                        <textarea class="form-control" asp-for="@Model.Note"></textarea>
                    </div>
                </div>
                <span asp-validation-for="@Model.Note" class="text-danger"></span>




                <button type="submit" class="btn bg-blue ml-3">Add<i class="icon-paperplane ml-2"></i></button>
            </fieldset>
        </form>

    </div>
</div>

