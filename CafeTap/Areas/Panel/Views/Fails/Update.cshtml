<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title font-weight-bold">Xərclər və Uğursuzluğlar Bölmələsi</h5>
    </div>

    <div class="card-body">
        <ul class="nav nav-tabs nav-tabs-highlight">
            <li class="nav-item"><a asp-controller="Spends" asp-action="Index" asp-route-page="1" class="nav-link">Xərclər</a></li>
            <li class="nav-item"><a asp-controller="EmployeePayments" asp-action="Index" asp-route-page="1" class="nav-link ">İşçilər ödənişləri</a></li>
            <li class="nav-item"><a asp-controller="Fails" asp-action="Index" asp-route-page="1" class="nav-link active ">Uğursuzluğlar</a></li>
        </ul>
        <div class="d-md-flex align-items-md-center flex-md-wrap text-center text-md-left">
            <ul class="list-inline list-inline-condensed mb-0">
                <li class="list-inline-item dropdown">
                    <a asp-action="Add" asp-controller="Fails" class="btn btn-link text-default"><i class="icon-add"></i> Yeni <strong>Uğursuzluğ</strong> əlavə et</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Uğursuzluq</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <p class="mb-4">Uğursuzluq əlavə et</p>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Update" asp-controller="Fails" asp-area="Panel" asp-route-id="@Model.Id" method="post">
            <fieldset class="mb-3">
                <legend class="text-uppercase font-size-sm font-weight-bold">Category Details</legend>
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">İşçi</label>
                    <div class="form-check form-check-inline">
                        <div class="col-lg-3">
                            <select class="form-control select-fixed-single" asp-for="EmployeeId" asp-items="@Model.SelectList" data-fouc>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Baş Verən Vaxt</label>
                    <div class="col-lg-3">
                        <input type="text" asp-for="HappenedAt" class="form-control pickadate-accessibility" placeholder="Try me&hellip;">
                    </div>
                </div>
                <span asp-validation-for="HappenedAt" class="text-danger"></span>

                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Restoran</label>
                    <div class="col-lg-6">
                        <input class="form-control" asp-for="@Model.Restaurant">
                    </div>
                </div>
                <span asp-validation-for="@Model.Restaurant" class="text-danger"></span>


                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Qeyd</label>
                    <div class="col-lg-6">
                        <input class="form-control" asp-for="@Model.Note">
                    </div>
                </div>
                <span asp-validation-for="@Model.Note" class="text-danger"></span>




                <button type="submit" class="btn bg-orange ml-3">Redaktə Et<i class="icon-paperplane ml-2"></i></button>
            </fieldset>
        </form>

    </div>
</div>

