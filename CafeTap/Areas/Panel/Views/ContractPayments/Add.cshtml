<div class="card">
    <div class="card-header header-elements-inline">
        <h5 class="card-title">Contract</h5>
        <div class="header-elements">
        </div>
    </div>

    <div class="card-body">
        <div class="text-danger" asp-validation-summary="All"></div>
        <form asp-action="Add" asp-controller="ContractPayments" method="post">
            <fieldset>
                <legend class="font-weight-semibold text-uppercase font-size-sm">
                    <i class="icon-file-text2 mr-2"></i>
                    Kontrat ödəniş informasiyası
                    <a href="#" class="float-right text-default" data-toggle="collapse" data-target="#demo1">
                        <i class="icon-circle-down2"></i>
                    </a>
                </legend>

                <div class="collapse show" id="demo1">
                    <div class="form-group">
                        <label>Məbləğ</label>
                        <input class="form-control" asp-for="Amount" placeholder="Məbləğ">
                    </div>


                    <div class="form-group">
                        <label>Ödəniş zamanı</label>
                        <div class="input-group">
                            <span class="input-group-prepend">
                                <span class="input-group-text"><i class="icon-calendar5"></i></span>
                            </span>
                            <input type="date" asp-for="PaidAt" class="form-control pickadate-selectors" placeholder="Try me&hellip;">
                        </div>
                    </div>
                </div>

                <input hidden asp-for="ContractId" value="@Model.ContractId" />

                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Əlavə Et<i class="icon-paperplane ml-2"></i></button>
                </div>
            </fieldset>
        </form>
    </div>
</div>